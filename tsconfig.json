{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",


    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",

    
    "allowJs": true,
    "checkJs": false,

    
    "declaration": false,
    "sourceMap": true
  },

  //Scans files
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "models",
    "routes"
  ]
}
